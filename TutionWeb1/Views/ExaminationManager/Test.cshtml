                @Html.EditorFor(model => model.ExamNote)
                @Html.ValidationMessageFor(model => model.ExamNote)
            </div>
        </div>

         <div class="form-group">
            @Html.LabelFor(model => model.EnrollKey, new { @class = "control-label col-md-2" })
